<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>hop-assemblies-plugins-transforms-sample</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>.</baseDirectory>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>*:*:zip</include>
            </includes>
            <unpack>true</unpack>
            <outputDirectory>.</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>databases</directory>
            <includes>
                <include>org.apache.hop:databases-db2:jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>transforms</directory>
            <includes>
                <include>org.apache.hop:hop-transform-selectvalues:jar</include>
                <include>org.apache.hop:hop-transform-rowgenerator:jar</include>
                <include>org.apache.hop:hop-transform-datagrid:jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>actions</directory>
            <includes>
                <include>org.apache.hop:hop-action-abort:jar</include>
                <include>org.apache.hop:hop-action-delay:jar</include>
                <include>org.apache.hop:hop-action-pipeline:jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>